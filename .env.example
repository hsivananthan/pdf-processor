# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/pdf_processor?schema=public"

# NextAuth.js Configuration
# Generate a secure random string: openssl rand -base64 32
NEXTAUTH_SECRET="REPLACE_WITH_32_CHAR_RANDOM_STRING"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration
# Get API key from SendGrid dashboard
SENDGRID_API_KEY="SG.REPLACE_WITH_SENDGRID_API_KEY"
SMTP_FROM="noreply@yourcompany.com"

# File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_DIR="./uploads"

# Security Settings
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
SESSION_MAX_AGE=28800
FAILED_LOGIN_ATTEMPTS=3
ACCOUNT_LOCKOUT_TIME=1800000
MFA_REQUIRED=false

# Processing Configuration
PROCESSING_TIMEOUT=600000
CONCURRENT_JOBS=3

# Security Headers
CSP_REPORT_URI=""
ENVIRONMENT="development"

# Rate Limiting (Optional - Upstash Redis)
# Sign up at https://upstash.com/ and create a Redis database
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Instructions:
# 1. Copy this file to .env.local
# 2. Replace all placeholder values with actual credentials
# 3. Never commit .env files to version control
# 4. Generate strong, unique secrets for production